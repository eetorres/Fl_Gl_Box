CXX = g++

PROG = fl_win_box
SCRS = $(PROG).cxx fl_class_win.cxx Fl_Gl_Box.cxx
OBJS = $(SCRS:.cxx=.o)

MDIR = $(shell sh -c pwd)

OPTIM  = -O2 -Wall -Wno-deprecated
LMATH = -lm
LX11R = -lGLU -lGL -lXft -lXinerama -lX11 -lXext
LFLTK = -lfltk -lfltk_gl

CFLAGS = $(OPTIM) -c
LFLAGS = $(OPTIM) $(LFLTK) $(LX11R)

.SUFFIXES:	.cxx .o .h

.cxx.o:
	$(CXX) $(CFLAGS) $< -o $@
